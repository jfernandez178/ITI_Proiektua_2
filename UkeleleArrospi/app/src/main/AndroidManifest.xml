<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.javier.ukelelearrospi" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.javier.ukelelearrospi.Login"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.javier.ukelelearrospi.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.javier.ukelelearrospi.ChordsActivity"
            android:label="@string/title_activity_chords"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="assig.app2.learnukulele.ChordsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.javier.ukelelearrospi.WikiActivity"
            android:label="@string/title_activity_wiki"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="assig.app2.learnukulele.WikiActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.javier.ukelelearrospi.LearnSongActivity"
            android:label="@string/title_activity_learn_song"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="assig.app2.learnukulele.LearnSongActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.javier.ukelelearrospi.ActivityErregistratu"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>
